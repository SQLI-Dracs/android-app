<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">9dp</item>
    </style>

    <style name="AppTheme.CardView.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/card_text_size</item>
    </style>

    <style name="AppTheme.CardView.Text.Black" parent="AppTheme.CardView.Text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.CardView.Text.Bold" parent="AppTheme.CardView.Text">
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CardView.Text.Title" parent="AppTheme.CardView.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/title_margin_horizontal</item>
    </style>

    <style name="AppTheme.CardView.Text.Title.Black" parent="AppTheme.CardView.Text.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Screen" parent="AppTheme">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="AppTheme.CardLayout" parent="AppTheme">
        <item name="android:background">@color/white_translucid</item>
        <item name="android:gravity">center</item>
    </style>
     <style name="AppTheme.CardLayout.Big" parent="AppTheme.CardLayout">
        <item name="android:padding">@dimen/card_big_padding</item>
    </style>
    <style name="AppTheme.CardListTitle" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
